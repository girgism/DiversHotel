@model Divers_Hotel.Models.Reservation

@{
    ViewData["Title"] = "Details";
}


@{ if (ViewData["GName"] != null)
    {
        <div class="alert  alert-success">
            <h4 class="alert-heading">Reservation Process Done :) </h4>
            <p class="mb-0">Welcom MR : @TempData["GName"] </p>
            <p>the Total Price will be : <span font-weight:bold">@TempData["Price"] $</span> </p>
        </div>
    }
}


<div>
    <h4 class="text-info">Reservation</h4>
    <hr />

    <div class="container ">
        <div class="row">
            <div class="card text-white text-center col-md-6">
                <h4 class="card-header bg-info">Reservation details</h4>
                <div class="card-body text-dark">
                    <div class="card-title bg-light p-2">
                        <strong class="col-md-4 text-left">
                            @Html.DisplayNameFor(model => model.GuestName) :
                        </strong>
                        <strong class="col-md-8 text-left">
                            @Html.DisplayFor(model => model.GuestName)
                        </strong>
                    </div>

                    <div class="card-title bg-light p-2">
                        <strong class="col-md-4 text-left">
                            @Html.DisplayNameFor(model => model.GuestEmail) :
                        </strong>
                        <strong class="col-md-8 text-left">
