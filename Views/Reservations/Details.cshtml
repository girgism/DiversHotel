                    </div>

                    <div class="card-title bg-light p-2">
                        <strong class="col-md-4 text-left">
                            @Html.DisplayNameFor(model => model.GuestCountry) :
                        </strong>
                        <strong class="col-md-8 text-left">
                            @Html.DisplayFor(model => model.GuestCountry)
                        </strong>
                    </div>

                    <div class="card-title bg-light p-0 ">
                        <strong class="col-md-4 text-left">
                            @Html.DisplayNameFor(model => model.NumberOfAdults) :
                        </strong>
                        <strong class="col-md-8 text-left">
                            @Html.DisplayFor(model => model.NumberOfAdults)
                        </strong>
                    </div>

                    <div class="card-title bg-light p-2">
                        <strong class="col-md-4">
                            @Html.DisplayNameFor(model => model.NumberOfChilds) :
                        </strong>
                        <strong class="col-md-8">
                            @Html.DisplayFor(model => model.NumberOfChilds)
                        </strong>
                    </div>

                    <div class="card-title bg-light p-2">
                        <strong class="col-md-4">
                            @Html.DisplayNameFor(model => model.CheckIn) :
                        </strong>
                        <strong class="col-md-8">
                            @Html.DisplayFor(model => model.CheckIn)
                        </strong>
                    </div>

                    <div class="card-title bg-light p-2">
                        <strong class="col-md-4">
                            @Html.DisplayNameFor(model => model.CheckOut) :
                        </strong>
                        <strong class="col-md-8">
                            @Html.DisplayFor(model => model.CheckOut)
                        </strong>
                    </div>

                    <div class="card-title bg-light p-2">
                        <strong class="col-md-4">
                            @Html.DisplayNameFor(model => model.Meal) :
                        </strong>
                        <strong class="col-md-8">
                            @Html.DisplayFor(model => model.Meal.Name)
                        </strong>
                    </div>

                    <div class="card-title bg-light p-2">
                        <strong class="col-md-4">
                            @Html.DisplayNameFor(model => model.Room) :
                        </strong>
                        <strong class="col-md-8">
                            @Html.DisplayFor(model => model.Room.Name)
                        </strong>
                    </div>
                    
                    <div class="card-title bg-light p-2">
                        <strong class="col-md-4">
                            @Html.DisplayNameFor(model => model.TotalPrice) :
                        </strong>
                        <strong class="col-md-8">
                            @Html.DisplayFor(model => model.TotalPrice)
                        </strong>
                    </div>

                </div>

                <div class="card-footer">
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-dark">Edit</a> |
                        <a asp-action="Index" class="btn btn-info">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

