@model Divers_Hotel.Models.Reservation

@{
    ViewData["Title"] = "Edit";
}
<h1>Editing Reservation</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
